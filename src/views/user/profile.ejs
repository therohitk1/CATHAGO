<% layout('layouts/main') %>
<%- include('../partials/page-title', { title: 'Profile', icon: 'user' }) %>

<section class="flex justify-center items-center h-[60vh] bg-gray-100 p-6">
  <div class="w-full max-w-3xl bg-white shadow-lg rounded-xl overflow-hidden p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      
      <!-- User Details Card -->
      <div class="bg-white shadow-md rounded-lg p-6 border">
        <h3 class="text-xl font-semibold text-gray-800">User Details</h3>
        <p class="text-gray-700 mt-2"><strong>Username:</strong> <%= user.username %></p>
        <p class="text-gray-700 mt-1"><strong>Email:</strong> <%= user.email %></p>
        <p class="text-gray-700 mt-1"><strong>Role:</strong> <%= user.role %></p>
      </div>

      <!-- Credits Card -->
      <div class="bg-white shadow-md rounded-lg p-6 border">
        <h3 class="text-xl font-semibold text-gray-800">Your Credits</h3>
        <p class="text-4xl font-bold text-blue-600 mt-2"><%= user.credits %></p>
        <p class="text-gray-500 text-sm">Total Credits Available</p>
      </div>

    </div>
  </div>
</section>

<%- include('../partials/footer') %>