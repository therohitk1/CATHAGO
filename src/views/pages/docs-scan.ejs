<% layout('layouts/main') %>
<%- include('../partials/page-title', { title: 'Scan Document', icon: 'search' }) %>

<section class="flex justify-center items-center h-[60vh] bg-gray-100 p-6">
  <div class="w-full max-w-lg bg-white shadow-lg rounded-xl p-6">
    
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-4">Scan Your Document</h2>

    <form action="/scan" method="POST" class="space-y-4">
      <div>
        <label class="block text-gray-700 font-medium mb-1">Select Document</label>
        <select name="documentId" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500">
          <% if (docs && docs.document) { %>
            <option value="<%= docs.document.id %>"><%= docs.document.name %></option>
          <% } else { %>
            <option disabled>No uploaded documents</option>
          <% } %>
        </select>
      </div>

      <div>
        <label class="block text-gray-700 font-medium mb-1">Compare With (Optional)</label>
        <input type="text" name="compareWith" placeholder="Enter document ID" 
          class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-500">
      </div>

      <button type="submit" 
        class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition">
        Scan Document
      </button>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>
