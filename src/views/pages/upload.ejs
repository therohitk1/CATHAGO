<% layout('layouts/main', { title: 'Upload PDF', activeTab: 'upload' }) %>

<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="fas fa-file-upload me-2"></i> Upload PDF</h5>
    </div>
    <div class="card-body">
        <p>Upload a PDF document to store and process.</p>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="pdfFile" class="form-label">Choose PDF File</label>
                <input type="file" class="form-control" id="pdfFile" name="pdfFile" accept=".pdf">
            </div>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-cloud-upload-alt me-2"></i> Upload PDF
            </button>
        </form>
    </div>
</div>
